<h1 class="text-center">
  <%= icon('fas', 'building', 'Company List') %>
</h1>

<div class="row">
  <div class="col">
    <table class="table table-striped table-light">
      <thead>
        <tr>
          <th scope="col">Number</th>
          <th scope="col">Name</th>
          <th scope="col"><span class="badge badge-info"><%= @companies.count %></th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr data-company-number="<%= company[:number] %>">
            <th scope="row"><%= company[:number] %></th>
            <td>
              <a class="company-link" href="<%= company_path(company[:number]) %>" data-remote="true">
                <%= company[:name] %>
              </a>
            </td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
